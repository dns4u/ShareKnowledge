            <a href="/pdf"><li>PDFs</li></a>
            <a href="/links"><li>Links</li></a>
          </ul>
        </div>
<div class="searchresult">
<ul>
<%temp=0%>
  <%if(file_result != nil)%>
  <% file_result.each do|result| %>
       <%if(result.file_file_name=~/#{Regexp.escape(search_text)}/)%>
     <li><a href=<%=result.file_file_name%>><%=result.file_file_name %></a></li>
     <%temp=1%>
     <%end%>
    <%end%>
<%end%>
<%if(text_result!= nil)%>
<% text_result.each do|resultset| %>
       <%if(resultset.share_text=~/#{Regexp.escape(search_text)}/)%>
     <li><%=resultset.share_text %></li>
     <%temp=1%>
     <%end%>
    <%end%>
<%end%>
</ul>
<%if(temp==0)%>
  <p>File not found </p>
 <% end%>
