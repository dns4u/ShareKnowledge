      <div class="search">
          <form name="searchform" method="post" action="" onsubmit="return require()">
          <input type="text" name="search" id="file_search">
          <input type="submit" name="btmsearch" value="Search">
          </form>
        </div>
      
      <div class="container">
        <div class="searchmenu">
